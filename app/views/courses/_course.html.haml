.list-group-item.row{ class: ['course', course.handle] }
  .col-lg-6
    %h3= course.name
    %p.description= course.description
    %hr

    %p.completion= completion_summary_for(course)
    .progress
      .progress-bar.progress-bar-success{style: "width: #{completion_percent_for(course)}%" }

  .col-lg-6
    %ul.categories.list-group
      = render collection: course.categories.sorted, partial: 'courses/category'
